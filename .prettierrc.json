{
  "jsxBracketSameLine": false,
  "printWidth": 120,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "all",
  "useTabs": false,
  "overrides": [
    {
      "files": "**/*.js",
      "options": {
        "parser": "babel"
      }
    },
    {
      "files": "**/*.css",
      "options": {
        "parser": "css"
      }
    },
    {
      "files": "**/*.json",
      "options": {
        "parser": "json"
      }
    },
    {
      "files": "**/*.{ts,tsx}",
      "options": {
        "parser": "typescript"
      }
    }
  ]
}
